html, body {
	-webkit-font-smoothing: antialiased;
  	font-family: 'PT Serif', serif;
}

html, body, .main-container, .ember-view {
	height: 100%;
	min-height: 100%;
}

div.row.main-container {
	padding-top: 45px;
	max-width: 100%;
}

.main-menu {
	margin-bottom: -45px;
}

.content {
	height: 100%;
	min-height: 100%;

	overflow: auto;
}

.post-header {
  display: block;
  position: relative;
  
  text-align: 		center;
  padding-top: 		100px;
  padding-bottom: 	100px;
  
  background-color:	rgb(30, 34, 36);

  > h1 {
  	color: white;
  	font-family: 'Bentham', serif;
  	text-shadow: 1px 1px black;

    font-size: 50px;
    font-weight: 300;
  }

  .keywords {
  	color: white;

  	span {
  		padding-left: 15px;
  		padding-right: 15px;
  		border-radius: 15px;
  		border: 1px solid rgba(255, 255, 255, 0.8);
  	}
  }

  .image {
	position: absolute;
	top: 0;
	left: 0;

	height: 100%;
	width: 100%;

	background: url("http://lorempixel.com/400/200/food") no-repeat;
	background-size: 100%;
	background-position: center center;

	opacity: 0.25;
  }
}

.post-body {
	font-family: 'PT Serif', serif;
	background-color: white;
	color: #292f33;
	padding-top: 60px;
	padding-left: 40px;
	padding-right: 40px;
}

.menu.left {
	height: 100%;
	min-height: 100%;
	background-color: #1e2224;
	padding:0;
	margin: 0;

	border-right: 5px solid #008cba;
	
	ul {
		color: whitesmoke;
		width: 100%;
		height: 100%;
		min-height: 100%;
		padding:0;
		margin: 0;

		li {
			position: relative;

			height: 120px;
			width: 100%;

			.image {
				position: absolute;
				top: 0;
				left: 0;

				height: 100%;
				width: 100%;

				background: url("http://lorempixel.com/400/200/food") no-repeat;
				background-size: 100%;
				background-position: center;

				-webkit-transition: opacity,background-size 0.3s, 1s;
						transition: opacity,background-size 0.3s, 1s;


				opacity: 0.25;
			}


			&:hover .image{
				background-size: 120%;
				opacity: 0.75;
			}

			span {
				padding-right: 15px;
				position: absolute;

				top: 40px;
				right: 0;

				line-height: 40px;
				text-align: right;
				vertical-align: middle;

				opacity: 1.0;
			}
		}
	}
}